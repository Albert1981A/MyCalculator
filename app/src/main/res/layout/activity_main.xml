<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20sp"
    tools:context=".MainActivity"
    android:weightSum="6">

    <TextView
        android:id="@+id/value"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:background="#789E9A"
        android:layout_marginTop="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_weight="1"
        android:text="0.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_clear"
            android:onClick="clear"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#F44336"
            android:text="C"/>

        <Button
            android:id="@+id/btn_factorial"
            android:onClick="factorial"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#026CC1"
            android:text="!"/>

        <Button
            android:id="@+id/btn_mod"
            android:onClick="mod"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#026CC1"
            android:text="%"/>

        <Button
            android:id="@+id/btn_tilde"
            android:onClick="tilde"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#026CC1"
            android:text="~"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_one"
            android:onClick="one"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="1"/>

        <Button
            android:id="@+id/btn_two"
            android:onClick="two"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="2"/>

        <Button
            android:id="@+id/btn_three"
            android:onClick="three"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="3"/>

        <Button
            android:id="@+id/btn_plus"
            android:onClick="plus"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#026CC1"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_four"
            android:onClick="four"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="4"/>

        <Button
            android:id="@+id/btn_five"
            android:onClick="five"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="5"/>

        <Button
            android:id="@+id/btn_six"
            android:onClick="six"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="6"/>

        <Button
            android:id="@+id/btn_minus"
            android:onClick="minus"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#026CC1"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_seven"
            android:onClick="seven"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="7"/>

        <Button
            android:id="@+id/btn_eight"
            android:onClick="eight"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="8"/>

        <Button
            android:id="@+id/btn_nine"
            android:onClick="nine"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="9"/>

        <Button
            android:id="@+id/btn_multiply"
            android:onClick="multiply"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#026CC1"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_zero"
            android:onClick="zero"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="0"/>

        <Button
            android:id="@+id/btn_dot"
            android:onClick="dot"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#3AA5FA"
            android:text="."/>

        <Button
            android:id="@+id/btn_calc"
            android:onClick="calc"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#03C60B"
            android:text="="/>

        <Button
            android:id="@+id/btn_division"
            android:onClick="division"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:layout_margin="5sp"
            android:gravity="center"
            android:textSize="40sp"
            android:backgroundTint="#026CC1"
            android:text="/"/>

    </LinearLayout>

</LinearLayout>